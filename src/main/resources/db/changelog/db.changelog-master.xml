<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="001-create-merchants-table" author="paybridge">
        <createTable tableName="merchants">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="business_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="business_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="business_country" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="webhook_url" type="VARCHAR(500)"/>
            <column name="webhook_secret" type="VARCHAR(255)"/>
            <column name="website_url" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="api_key_test" type="VARCHAR(255)"/>
            <column name="api_key_live" type="VARCHAR(255)"/>
            <column name="api_key_test_hash" type="VARCHAR(255)"/>
            <column name="api_key_live_hash" type="VARCHAR(255)"/>
            <column name="test_mode" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="merchants" indexName="idx_merchants_email">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <!-- Create providers table -->
    <changeSet id="002-create-providers-table" author="paybridge">
        <createTable tableName="providers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="display_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="brand_color" type="VARCHAR(7)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="providers" indexName="idx_providers_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <!-- Create provider_configs table -->
    <changeSet id="003-create-provider-configs-table" author="paybridge">
        <createTable tableName="provider_configs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="merchant_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_provider_config_merchant"
                             references="merchants(id)"/>
            </column>
            <column name="provider_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_provider_config_provider"
                             references="providers(id)"/>
            </column>
            <column name="is_enabled" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="last_verified_at" type="TIMESTAMP"/>
            <column name="vault_path" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="provider_configs" indexName="idx_provider_config_merchant_provider">
            <column name="merchant_id"/>
            <column name="provider_id"/>
        </createIndex>

        <createIndex tableName="provider_configs" indexName="idx_provider_config_enabled">
            <column name="is_enabled"/>
        </createIndex>

        <addUniqueConstraint tableName="provider_configs"
                             columnNames="merchant_id, provider_id"
                             constraintName="uk_provider_config_merchant_provider"/>
    </changeSet>

    <!-- Create users table -->
    <changeSet id="004-create-users-table" author="paybridge">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email_verified" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="merchant_id" type="BIGINT">
                <constraints foreignKeyName="fk_users_merchant"
                             references="merchants(id)"/>
            </column>
            <column name="enabled" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="verification_code" type="VARCHAR(10)"/>
            <column name="verification_code_expires_at" type="TIMESTAMP"/>
            <column name="verification_attempts" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="last_verification_request_at" type="TIMESTAMP"/>
        </createTable>

        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>

        <createIndex tableName="users" indexName="idx_users_merchant">
            <column name="merchant_id"/>
        </createIndex>

        <createIndex tableName="users" indexName="idx_users_type">
            <column name="user_type"/>
        </createIndex>
    </changeSet>

    <!-- Create payments table -->
    <changeSet id="005-create-payments-table" author="paybridge">
        <createTable tableName="payments">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="merchant_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_payments_merchant"
                             references="merchants(id)"/>
            </column>
            <column name="provider_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_payments_provider"
                             references="providers(id)"/>
            </column>
            <column name="amount" type="DECIMAL(12,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="refunded_amount" type="DECIMAL(12,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="payments" indexName="idx_payments_merchant">
            <column name="merchant_id"/>
        </createIndex>

        <createIndex tableName="payments" indexName="idx_payments_provider">
            <column name="provider_id"/>
        </createIndex>

        <createIndex tableName="payments" indexName="idx_payments_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="payments" indexName="idx_payments_created">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <!-- Create api_key_usage table -->
    <changeSet id="006-create-api-key-usage-table" author="paybridge">
        <createTable tableName="api_key_usage">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="merchant_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_api_usage_merchant"
                             references="merchants(id)"/>
            </column>
            <column name="endpoint" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="ip_address" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="response_status" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="method" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="user_agent" type="VARCHAR(1000)"/>
            <column name="time_stamp" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="api_key_usage" indexName="idx_api_usage_merchant">
            <column name="merchant_id"/>
        </createIndex>

        <createIndex tableName="api_key_usage" indexName="idx_api_usage_timestamp">
            <column name="time_stamp"/>
        </createIndex>

        <createIndex tableName="api_key_usage" indexName="idx_api_usage_status">
            <column name="response_status"/>
        </createIndex>

        <createIndex tableName="api_key_usage" indexName="idx_api_usage_endpoint">
            <column name="endpoint"/>
        </createIndex>
    </changeSet>

    <!-- Insert initial provider data -->
    <changeSet id="007-insert-initial-providers" author="paybridge">
        <insert tableName="providers">
            <column name="name" value="stripe"/>
            <column name="display_name" value="Stripe"/>
            <column name="brand_color" value="#635BFF"/>
        </insert>
        <insert tableName="providers">
            <column name="name" value="flutterwave"/>
            <column name="display_name" value="Flutterwave"/>
            <column name="brand_color" value="#F5A623"/>
        </insert>
        <insert tableName="providers">
            <column name="name" value="paystack"/>
            <column name="display_name" value="Paystack"/>
            <column name="brand_color" value="#00A859"/>
        </insert>
    </changeSet>

    <!-- Insert default admin user -->
    <changeSet id="008-insert-default-admin" author="paybridge">
        <insert tableName="users">
            <column name="user_type" value="ADMIN"/>
            <column name="email" value="admin@paybridge.com"/>
            <column name="password" value="$2a$10$JLdnn5XO62m6w0Jr.pdEUuNyLTPEZTtIV4yGXCw7y5odC0qgvKWZm"/> <!-- You should replace this with actual hashed password -->
            <column name="email_verified" value="true"/>
            <column name="enabled" value="true"/>
        </insert>
    </changeSet>
</databaseChangeLog>